---
import { Image } from 'astro:assets'
interface Props {
	title: string
	description: string
	imageUrl: string
	backgroundColor: string
	isOdd: boolean
}

const { title, description, imageUrl, isOdd } = Astro.props
---

<section class={`${Astro.props.backgroundColor}`}>
	<div
		class="grid grid-cols-1 md:grid-cols-2 justify-between items-center gap-3 px-24"
	>
		<div class={`${isOdd ? 'md:order-last' : ''}`}>
			<h1 class="text-center text-4xl font-bold md:text-left dark:text-white">
				{title}
			</h1>
			<p class="text-center md:text-left dark:text-white">{description}</p>
		</div>

		<div class={`mx-auto p-4`}>
			<Image height={400} width={400} src={imageUrl} alt={title} />
		</div>
	</div>
</section>
